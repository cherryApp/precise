{
  "$schema": "schema.json",
  "providers": {
    "openai": {
      "id": "openai",
      "name": "OpenAI",
      "type": "openai",
      "base_url": "https://api.openai.com/v1",
      "api_key": "$OPENAI_API_KEY",
      "system_prompt_prefix_path": "./system_prompt.txt"
    }
  },
  "models": {
    "large": {
      "model": "gpt-4o",
      "provider": "openai"
    },
    "small": {
      "model": "gpt-4o-mini",
      "provider": "openai"
    }
  }
}